{
	"extends": "@sapphire/ts-config",
    "compilerOptions": {
		"module": "ESnext",
		"rootDir": "./src",
        "outDir": "./dist",       
        "baseUrl": "./src",
        "typeRoots": ["node_modules/@types", "src/@types"],
		"noImplicitReturns": false,
		"paths": {
            "#utils/*": ["util/*"],
            "#types/*": ["@types/*"],
            "#config/*": ["config/*"],
        }
    }
}